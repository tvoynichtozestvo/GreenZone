<Window x:Class="BLA.AddPolivWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BLA"
        mc:Ignorable="d"
        Title="Добавление полива" Height="459" Width="355" Icon="assets/logo.ico">
    <Grid Background="#E8F5E9">
        <Grid.RowDefinitions>
            <RowDefinition Height="407*"/>
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>
        <Label Content="Добавление" Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Начало полива" HorizontalAlignment="Left" Margin="112,71,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox Name="startBox" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="302" Height="27"/>
        <Label Content="Конец полива" HorizontalAlignment="Left" Margin="116,133,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox Name="endBox" Margin="26,162,27,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="302" Height="27"/>
        <Label Content="День недели" HorizontalAlignment="Left" Margin="120,195,0,0" VerticalAlignment="Top" FontSize="14"/>
        <ComboBox Name="weekBox" Margin="28,224,27,0" VerticalAlignment="Top" Width="301" Height="27"/>
        <Label Content="Удобрение" HorizontalAlignment="Center" Margin="0,256,0,0" VerticalAlignment="Top" FontSize="14"/>
        <ComboBox Name="fertilizerBox" Margin="28,284,27,0" VerticalAlignment="Top" Width="301" Height="27"/>
        <Button Content="Добавить" Margin="28,335,27,0" Click="Button_Click" VerticalAlignment="Top" Height="32" Width="300" Background="#4CAF50" Foreground="White"/>

    </Grid>
</Window>
