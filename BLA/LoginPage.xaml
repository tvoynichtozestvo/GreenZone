<Page x:Class="BLA.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BLA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Label Content="Вход" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="24"/>
        <TextBox Name="loginBox" HorizontalAlignment="Center" Margin="0,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" Height="26"/>
        <Label Content="Логин" HorizontalAlignment="Center" Margin="0,67,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox Name="PasswordBox" HorizontalAlignment="Center" Margin="0,183,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250" Height="26"/>
        <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,146,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="Вход" HorizontalAlignment="Center" Margin="0,239,0,0" VerticalAlignment="Top" Height="28" Width="250" Click="Button_Click" Background="#4CAF50" Foreground="White"/>
        <Label Content="Забыли пароль?" HorizontalAlignment="Center" Margin="0,267,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Возникли проблемы c приложениями?" HorizontalAlignment="Left" Margin="10,305,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Телефон тех. поддержки: 8-999-555-4444" HorizontalAlignment="Left" Margin="10,347,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Почта для контакта: greenZon@mail.ru" HorizontalAlignment="Left" Margin="10,378,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button Content="Написать в поддержку" HorizontalAlignment="Left" Margin="387,313,0,0" VerticalAlignment="Top" Height="28" Width="138" Background="#4CAF50" Foreground="White" Click="Button_Click_1" FontSize="12"/>

    </Grid>
</Page>
